<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/connect_text_size_title</item>
    </style>

    <style name="TextView.Screen.Title" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/connect_text_size_title</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="TextView.Screen.Description" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/connect_text_size_description</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="TextView.Screen.Menu" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/connect_text_size_menu</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textSize">@dimen/connect_text_size_error</item>
    </style>



    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>