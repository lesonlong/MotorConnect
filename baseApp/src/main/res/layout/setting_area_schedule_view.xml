<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.motor.connect.feature.setting.area.SettingAreaScheduleViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:onClick="actionClose"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_close" />

        <!-- Schedule days-->

        <TextView
            style="@style/TextView.Screen.Title"
            android:layout_marginLeft="20dp"
            android:text="So lan tuoi trong ngay"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:minHeight="@dimen/actionbar_height"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="1 lan"
                    android:textSize="@dimen/connect_text_size_18" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="2 lan"
                    android:textSize="@dimen/connect_text_size_18" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="3 lan"
                    android:textSize="@dimen/connect_text_size_18" />
            </RadioGroup>
        </LinearLayout>

        <!-- Loop days-->

        <TextView
            style="@style/TextView.Screen.Title"
            android:layout_marginLeft="20dp"
            android:text="Lich tuoi lap lai"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:minHeight="@dimen/actionbar_height"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="moi ngay"
                    android:textSize="@dimen/connect_text_size_18" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="2 ngay"
                    android:textSize="@dimen/connect_text_size_18" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="3 ngay"
                    android:textSize="@dimen/connect_text_size_18" />
            </RadioGroup>
        </LinearLayout>

        <!-- First -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/color_grey" />

        <TextView
            style="@style/TextView.Screen.Title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Lan 1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center|left"
            android:minHeight="@dimen/actionbar_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView.Screen.Description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="Bat dau"
                android:textSize="@dimen/connect_text_size_title" />

            <TextView
                android:id="@+id/txt_time1_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.2"
                android:background="@drawable/border_rect_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="06:00"
                android:textSize="@dimen/connect_text_size_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center|left"
            android:minHeight="@dimen/actionbar_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView.Screen.Description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="Hoat dong"
                android:textSize="@dimen/connect_text_size_title" />

            <TextView
                android:id="@+id/txt_time1_run"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.2"
                android:background="@drawable/border_rect_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="30 phut"
                android:textSize="@dimen/connect_text_size_title" />

        </LinearLayout>

        <!-- First End -->

        <!-- Second -->
        <LinearLayout
            android:id="@+id/second_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_grey" />

            <TextView
                style="@style/TextView.Screen.Title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Lan 2"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|left"
                android:minHeight="@dimen/actionbar_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView.Screen.Description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="Bat dau"
                    android:textSize="@dimen/connect_text_size_title" />

                <TextView
                    android:id="@+id/txt_time2_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/border_rect_bg"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="11:00"
                    android:textSize="@dimen/connect_text_size_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|left"
                android:minHeight="@dimen/actionbar_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView.Screen.Description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="Hoat dong"
                    android:textSize="@dimen/connect_text_size_title" />

                <TextView
                    android:id="@+id/txt_time2_run"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/border_rect_bg"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="30 phut"
                    android:textSize="@dimen/connect_text_size_title" />

            </LinearLayout>
        </LinearLayout>
        <!-- Second End -->

        <!-- Third -->

        <LinearLayout
            android:id="@+id/third_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_grey" />

            <TextView
                style="@style/TextView.Screen.Title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Lan 3"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|left"
                android:minHeight="@dimen/actionbar_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView.Screen.Description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="Bat dau"
                    android:textSize="@dimen/connect_text_size_title" />

                <TextView
                    android:id="@+id/txt_time3_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/border_rect_bg"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="17:00"
                    android:textSize="@dimen/connect_text_size_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|left"
                android:minHeight="@dimen/actionbar_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView.Screen.Description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="Hoat dong"
                    android:textSize="@dimen/connect_text_size_title" />

                <TextView
                    android:id="@+id/txt_time3_run"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/border_rect_bg"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="30 phut"
                    android:textSize="@dimen/connect_text_size_title" />

            </LinearLayout>
        </LinearLayout>
        <!-- Third End -->

        <TextView
            style="@style/TextView.Screen.Description"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center|bottom"
            android:text="Thoi gian hoat dong tu 05h den 17h" />
    </LinearLayout>
</layout>