<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.motor.connect.feature.data.UserViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_empty"
                style="@style/TextView.Screen.Title"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/actionbar_height"
                android:background="@drawable/cirle_background"
                android:gravity="center"
                android:text="@string/home_area_empty"
                android:textColor="@color/color_white"
                android:textSize="@dimen/connect_text_size_36"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingBottom="@dimen/actionbar_height"
                app:data="@{viewModel.dataArea}"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


            <LinearLayout
                android:id="@+id/bottom_container"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@+id/recyclerView"
                android:layout_gravity="bottom"
                android:background="@drawable/card_view_style"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_home"
                    style="@style/TextView.Screen.Menu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center"
                    android:layout_weight="1"
                    android:background="@drawable/item_view_style"
                    android:gravity="center|center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Màn Hình Chính"
                    android:textSize="@dimen/connect_text_size_menu" />

                <TextView
                    android:id="@+id/btn_add"
                    style="@style/TextView.Screen.Menu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/item_view_style"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Thêm Khu Vực"
                    android:textSize="@dimen/connect_text_size_menu" />

                <TextView
                    android:id="@+id/btn_notify"
                    style="@style/TextView.Screen.Menu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/item_view_style"
                    android:gravity="center"
                    android:text="Thông Báo"
                    android:textSize="@dimen/connect_text_size_menu" />

                <TextView
                    android:id="@+id/btn_setting"
                    style="@style/TextView.Screen.Menu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/item_view_style"
                    android:gravity="center"
                    android:text="Cài Đặt"
                    android:textSize="@dimen/connect_text_size_menu" />

            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>

</layout>